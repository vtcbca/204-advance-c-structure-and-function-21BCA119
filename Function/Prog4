#include<stdio.h>
#include<conio.h>
void od();
void main()
{
	clrscr();
	od();
	getch();
}
void od()
{
	int a;
	printf("\n\t Enter any number:");
	scanf("%d",&a);
	clrscr();

	if(a%2==0)
	{

		printf("\n\t%d  is even no",a);
	}
	else
	{

		printf("\n\t%d is odd no ",a);
	}
}
